{
    "name": "judokit-react-native",
    "title": "Judopay React Native Module",
    "version": "3.1.1",
    "description": "A React Native module for the Judopay native SDKs to take payments on iOS and Android.",
    "main": "JudoPay.tsx",
    "scripts": {
        "test": "jest --coverage && open coverage/lcov-report/index.html",
        "lint": "tsc && eslint '*/**/*.{js,ts,tsx}' --quiet"
    },
    "files": [
        "JudoPay.tsx",
        "types/",
        "components/",
        "android/src/main/AndroidManifest.xml",
        "android/src/main/java/",
        "android/build.gradle",
        "android/gradle.properties",
        "ios/",
        "RNJudopay.podspec",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/judopay/judokit-reactnative"
    },
    "keywords": [
        "react-native",
        "judo",
        "judopay",
        "judokit",
        "payment",
        "gateway"
    ],
    "author": {
        "name": "JudoPay",
        "email": "developersupport@judopayments.com",
        "url": "https://www.judopay.com"
    },
    "license": "MIT",
    "licenseFilename": "LICENSE",
    "readmeFilename": "README.md",
    "peerDependencies": {
        "react-native": "^0.61.5"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "babel-jest": "^25.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.0",
        "jest": "^25.3.0",
        "react": "16.9.0",
        "react-native": "0.61.5"
    },
    "dependencies": {
        "@types/jest": "^25.2.3",
        "@types/react": "^16.9.23",
        "@types/react-native": "^0.61.21",
        "@types/react-native-dialog": "^5.6.2",
        "@types/react-native-loading-spinner-overlay": "^0.5.2",
        "@types/react-test-renderer": "^16.9.2",
        "typescript": "^3.8.3"
    },
    "jest": {
        "preset": "react-native",
        "transformIgnorePatterns": [
            "node_modules/(?!(jest-)?react-native|react-navigation|@react-navigation|@react-native-community/masked-view|judo-react-native)"
        ],
        "setupFiles": [
            "<rootDir>/jestSetup.js"
        ]
    }
}